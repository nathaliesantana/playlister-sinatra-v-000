<h1> EDIT SONG FORM </h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="Artist Name">Artist Name:</label>
  <input type="text" name="Artist Name" value="<%=@song.artist.name%>">
  <br>

  <label>Song Name:</label>
  <input type="text" name="Name" value="<%=@song.name%>">
  <br>


  <label>Genres:</label>
  <% Genre.all.each do |genre| %>
    <input
    id="<%= genre.name %>"
    type="checkbox"
    name="genres[]"
    value="<%= genre.id %>"
    <%= 'checked' if @songs.genres.include?(genre)%>>
    <%=genre.name%>
  <% end %>

  <input type="submit" value="Update">
</form>
