<h1> EDIT SONG FORM </h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Artist Name:</label>
  <input type="text" name="Artist Name" value="<%=@song.artist%>">
  <br>

  <label>Song Name:</label>
  <input type="text" name="Name" value="<%=@song.name%>">
  <br>


  <% Genre.all.each do |genre| %>
  <label><%= genre.name %></label>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @songs.genres.include?(genre)%>>
  <% end %>

  <input type="submit" value="save">
</form>
